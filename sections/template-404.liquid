<div class="max-w-md">
  <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
  <div class="my-4">
    <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}</p>
  </div>
  <div class="my-4">
    {% assign button_url = section.settings.button_url | default: shop.secure_url %}
    {% assign button_label = section.settings.button_label | default: 'Back to Homepage' %}

    {% if button_url != blank and button_label != blank %}
      <a
        href="{{ button_url }}"
        class="inline-block px-6 py-3 bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-300"
      >
        {{ button_label }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex items-center justify-center h-auto text-center py-7",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "404",
      "label": "404 Heading Title"
    },
    {
      "type": "text",
      "id": "subtext_title",
      "default": "The page you are looking for does not exist.",
      "label": "404 Subtext Title"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Back to Homepage",
      "label": "Button Label"
    },
    {
      "type": "text",
      "id": "button_url",
      "label": "Button URL"
    }
  ]
}
{% endschema %}
