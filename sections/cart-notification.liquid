{% for item in cart.items %}
    <div 
        data-cart-item
        data-key="{{ item.key }}"
        data-title="{{ item.product.title | escape_once }}"
        data-variant-id="{{ item.variant.id }}"
        data-quantity="{{ item.quantity }}"
        data-price="{{ item.final_line_price | money }}"
        data-variant="{{ item.variant.title | escape_once }}"
        data-image="{% if item.image %}{{ item.image | image_url: width: 160 }}{% else %}/placeholder.png{% endif %}"
    ></div>
{% endfor %}

<div id="cart-modal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 backdrop-blur-sm">
    <div class="bg-white shadow-xl border rounded-xl p-8 w-full max-w-lg mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-semibold">Added to cart!</h2>
            <button id="cart-modal-close" class="text-gray-500 hover:text-gray-700 text-3xl leading-none" aria-label="Close">
                    {% render 'icon-close' %}
            </button>
        </div>

        <div id="cart-modal-items" class="space-y-6 max-h-[400px] overflow-y-auto pr-1"></div>

        <div class="mt-8 flex flex-col gap-3">
            <a href="{{ routes.cart_url }}" class="bg-gray-100 text-center text-base py-3 rounded hover:bg-gray-200">View Cart</a>
            <a href="#" id="checkout-button" class="bg-black text-white text-center text-base py-3 rounded hover:bg-gray-800">Checkout</a>
        </div>
    </div>
</div>
